{
  "name": "palindo-monorepo",
  "version": "1.0.0",
  "description": "Monorepo untuk Palindo.id (Backend & Frontend)",
  "private": true,
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../palindo-web && npm install",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd palindo-web && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd palindo-web && npm run dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
